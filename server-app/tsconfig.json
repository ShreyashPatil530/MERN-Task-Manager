{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "nodenext",
    "target": "esnext",
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    // Ensure "esModuleInterop": true is present if you add other libs
    "esModuleInterop": true 
  },
  "include": ["src/**/*"] // Make sure it only includes the src folder
}